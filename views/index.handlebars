<div class="container">
    <div class="row">
        <div class="col-12 text-center">
            <h1>BURGER EATS</h1>
        </div>
        <div class="col-6 text-center">
            <h2>BURGERS TO BE EATEN</h2>
            <div class="row">
                {{#each burger_data}}
                    {{#unless this.devoured}}
                <div class="col-9 text-center">
                    {{this.id}}. {{this.burger_name}}
                </div>
                <div class="col-3 text-center">
                    <form class="eat-form button-size" method="POST" action="/burgers/update?_method=PUT">
                    <input type="hidden" name="burger_id" type="text" value={{this.id}}>
                    <button type="submit" class="mb-1 btn btn-danger">EAT</button></form>
                </div>
                {{/unless}}
                {{/each}}
            </div>
        </div>
        <div class="col-6 text-center">
            <h2>BURGERS YOU HAVE EATEN</h2>
            {{#each burger_data}}
                {{#if this.devoured}}
                    <input class="mb-1 form-control" type="text" placeholder="{{this.id}} . {{this.burger_name}}" readonly>
                {{/if}}
            {{/each}}
        </div>
    </div>
</div>

<div class="container">
    <div class="row">
        <div class="col-12 text-center">
            <form action="/burgers/create" method="POST">
            <input type="text" name="burger_name" class="form-control" value="" id="burger-text">
            <button type="submit" class="btn btn-warning" id="burger-enter-button">ADD BURGER</button></form>
        </div>
    </div>
</div>